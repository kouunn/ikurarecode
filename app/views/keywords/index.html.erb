<p id="notice"><%= notice %></p>



<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">热门搜索</h3>
  </div>
  <div class="panel-body">
    <% @keywords.each do |keyword| %>
      <a href="#" class="btn btn-default btn-xs"><%= keyword.name %></a>
    <% end %>
  </div>
</div>







<% if current_user.id == 1 %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Count</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @keywords.each do |keyword| %>
      <tr>
        <td><%= keyword.name %></td>
        <td><%= keyword.count %></td>
        <td><%= keyword.user_id %></td>
        <td><%= link_to 'Show', keyword %></td>
        <td><%= link_to 'Edit', edit_keyword_path(keyword) %></td>
        <td><%= link_to 'Destroy', keyword, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Keyword', new_keyword_path %>
<% end %>