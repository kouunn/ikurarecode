<div class="container">
          <div class="row" style=" margin:20px">  
            <div class="col-xs-12">
                <button class="btn btn-small " data-toggle="portfilter" data-target="all">
                    全部
                </button>
                <button class="btn btn-small btn-danger" data-toggle="portfilter" data-target="化妆品">
                    化妆品
                </button>
                <button class="btn btn-small btn-danger" data-toggle="portfilter" data-target="母婴">
                    母婴
                </button>
                <button class="btn btn-small btn-danger" data-toggle="portfilter" data-target="电子">
                    电子
                </button>
            </div>
          </div>  
               


                        <% @brands.each do |brand| %>
                           
                           <div class="col-md-4" data-tag='<%= brand.portfolio %>'>
                                    <div class="box">                           
                                        <div class="icon">
                                        
                                            <div class="image"><i class="fa ">logo</i></div>
                                            <div class="info">
                                                <h3 class="title"><%= brand.name_cn %></h3>
                                                <p>
                                                    <%= brand.introduction %>
                                                    <%= brand.portfolio %>
                                                </p>
                                                <div class="more">
                                                    <a href="#" title="Title Link">
                                                        更多信息 <i class="fa fa-angle-double-right"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="space"></div>

                                    </div> 
                            </div>
                            
                        <% end %> 
            
            
</div>




<p id="notice"><%= notice %></p>

<h1>Listing Brands</h1>

<table>
  <thead>
    <tr>
      <th>Name cn</th>
      <th>Name jp</th>
      <th>Introduction</th>
      <th>Image url</th>
      <th>Creation time</th>
      <th>Site address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name_cn %></td>
        <td><%= brand.name_jp %></td>
        <td><%= brand.introduction %></td>
        <td><%= brand.image_url %></td>
        <td><%= brand.creation_time %></td>
        <td><%= brand.site_address %></td>
        <td><%= link_to 'Show', brand %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

